<%= render 'shared/header', header: "Login" %>

<%= form_tag '/login', method: 'post', class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :username, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= text_field_tag :username, params[:username], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "login", class: "btn btn-default" %>
    </div>
  </div>
<% end %>